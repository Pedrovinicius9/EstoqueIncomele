<%- include ('../partials/header.ejs') %>

<body>
    <div class="container"><hr>
        <div class="col-lg-12" style="text-align: right;">
            <a href="/" class="btn btn-dark text-right">HOME</a>
        </div>
        <h1>Pescoço</h1>
        <a class="btn btn-primary btn-lg" href="/pescoco/new">Novo registro</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Estado</th>
                    <th>Quantidade</th>
                    <th>Data</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                <% pescocos.forEach(pescoco => { %>
                <tr>
                    <th><%= pescoco.id %></th>
                    <th><%= pescoco.estado %></th>
                    <th><%= pescoco.qntd %></th>
                    <th><%= pescoco.date %></th>
                    <th>
                        <a href="/pescoco/edit/<%= pescoco.id %>" class="btn btn-outline-warning">Editar</a>

                        <form action="/pescoco/delete" method="POST" style="display: inline;"
                            onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= pescoco.id %>">
                            <button class="btn btn-outline-danger">Deletar</button>
                        </form>
                    </th>
                </tr>
                <% }) %>

            </tbody>
        </table>
    </div>
</body>

<%- include ('../partials/footer.ejs') %>

<script>
    function confirmarDelecao(event, form) {
        event.preventDefault();
        var decision = confirm("Você quer deletar este registro?");
        if (decision) {
            form.submit();
        }
    }
</script>