                                <option value="SAIDA">SAIDA</option>
                                <% } else { %>
                                    <option value="ENTRADA">ENTRADA</option>
                                    <% } %>
                        </select> <br>
                        <input type="text" class="form-control" name="modelo"
                            placeholder="Informe o modelo da Luminaria:" value="<%= luminaria.modelo %>"><br>
                        <input type="number" class="form-control" name="qntd"
                            placeholder="Informe a quantidade de peÃ§as:" value="<%= luminaria.qntd %>"><br>
                        <input type="text" class="form-control" name="date" placeholder="Informe a data:"
                            value="<%= luminaria.date %>"><br>
                        <input type="hidden" name="id" value="<%= luminaria.id %>">
                        <button class="btn btn-primary btn-lg ">Registrar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>

